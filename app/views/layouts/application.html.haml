!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Quizlytics
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      %nav
        %ul
        - if !logged_in?
          - unless controller_name == "users"
            %li= link_to "I'm a new nerd!", new_user_path
          - unless controller_name == "user_sessions"
            %li= link_to "I'm a returning nerd!", new_user_session_path
        - else
          %li= link_to "I'm done for today.", user_session_path, method: :delete
    %p.notice= notice
    %p.alert= alert
    = yield