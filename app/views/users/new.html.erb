<div class="home_base">
  <h1> Welcome New Nerd!</h1>

  <h2> Please sign up below:</h2>

  <div class="wide_home">
    <%= simple_form_for @user do |f| %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%=f.button :submit, "Sign me up, coach!" %>

    <% end %>
  </div>

  <div class="right_home">
    <%= image_tag("buzzer.jpg", :alt => "Hand with quiz bowl buzzer") %>
  </div>

</div>