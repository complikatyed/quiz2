<div class="show_main">

  <div class="show_first">
    <h3>Here's your new player:</h3>
    <ul>
      <li><h2><%= "#{@player.first_name} #{@player.last_name[0]}" %></h2></li>
      <li><%= "#{@player.email}" %></li>
      <li><%= "#{@player.cell}" %></li>
      <li><%= "Points: #{@player.points}"%></li>
      <li><%= "Negs: #{@player.negs}"%></li>
    </ul>
  </div>

  <div class="show_second">
    <h1 class="blue">What would you like to do next?</h1>

    <div class="show_second_left">
      <ul>
        <li><%= button_to "Add a new player", new_player_path, :class => "button" "main", :method => :get %></li>
        <li><%= button_to "View players", players_path, :class => "button" "main", :method => :get %></li>
      </ul>
    </div>
    <div class="show_second_right">
      <ul>
        <li><%= button_to "Create teams", root_path, :class => "button" "main" %></li>
        <li><%= button_to "Set up a game", new_game_path, :class => "button" "main", :method => :get %></li>
      </ul>
    </div>
    <ul>
      <li><%= button_to "Start playing", root_path, :class => "button" "main" %></li>
    </ul>

  </div>
</div>
